<div class="waypoint-nav space"></div>
<%= render partial: 'shared/nav' %>
<div class="gal">
  <div class="title">
    <h1> <%= @gallery.name %></h1>
    <h4> <%= @gallery.location %> </h4>
  </div>
  <ul class="gal-grid move-up" id="gal-grid">

    <% @gallery.pictures.each do |picture| %>
      <li><%= link_to image_tag(picture.image.url(:full_size)), picture_path(picture) %></li>
    <% end %>

  </ul>

  <script type="text/javascript">
    new AnimOnScroll( document.getElementById( 'gal-grid' ), {
      minDuration : 0.4,
      maxDuration : 0.7,
      viewportFactor : 0.2
    } );
  </script>
</div>
